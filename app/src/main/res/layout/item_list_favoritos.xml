<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagenLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginRight="8dp"/>
        <LinearLayout
            android:id="@+id/datosRecetas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombreReceta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:text="Nombre Receta"
                android:textSize="21sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.375"
                    android:text="@string/rendimiento"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/rendimiento"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="0.375"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/tiempototal"/>
                <TextView
                    android:id="@+id/tiempo_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.125"
                    android:textSize="17sp"
                    android:text="120"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>